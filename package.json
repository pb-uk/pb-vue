{
  "name": "pb-vue",
  "version": "0.0.0-dev",
  "description": "Vue TypeScript components and application launcher",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/pb-vue.min.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "rimraf dist && npm run lint && npm run test:unit && npm run build:build && npm run test:build",
    "build:build": "rollup -c",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "test:unit": "mocha -r ts-node/register 'test/unit/**/*.{spec,test}.ts'",
    "test:build": "mocha -r ts-node/register 'test/build/**/*.{spec,test}.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pb-uk/pb-vue.git"
  },
  "author": "pb@pbuk.uk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pb-uk/pb-vue/issues"
  },
  "homepage": "https://github.com/pb-uk/pb-vue#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "camelcase": "^6.2.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vue": "^3.2.21",
    "vue-router": "^4.0.12"
  }
}
